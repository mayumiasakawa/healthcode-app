<div  id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">

    <%= render "shared/sidebar" %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
        <div id="content">

          <%= render "shared/header" %>

            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-10">
                    <div class="pl-5 pt-3">
    
                        <%= form_with model: @overview, url: overviews_path, class: 'user', local: true do |f| %>
    
                          <%= render 'shared/error_messages', model: f.object %>

                          
                          <div class="card card-body m-3 py-3 border-left-success">
                          身長・体重・腹囲
                          </div>
                          <div class="form-group ml-4">
                              <div class='input-date-wrap'>
                                <label class="mr-4">測定日</label>
                                <%= raw sprintf(
                                              f.date_select(
                                                :physicalfinding_measuring_date,
                                                use_month_numbers: true,
                                                prompt:'--',
                                                start_year: (Time.now.year),
                                                end_year: 2000,
                                                date_separator: '%s'),
                                              "<p> 年 </p>", "<p> 月 </p>",) + "<p> 日 </p>" %>
                              </div>                                
                        
                              <div class="md-4 mt-2">
                                <%= f.text_field :height, class:"input-default form-control form-control-user overview", id:"height", placeholder:"身長（半角）cm", maxlength:"3" %> 
                              </div>                             
                              <div class="col-md-4 mt-2">
                                <%= f.text_field :weight, class:"input-default form-control form-control-user overview", id:"weight", placeholder:"体重（半角）cm", maxlength:"3" %>  
                              </div>
                              <div class="col-md-4 mt-2">
                                <%= f.text_field :abdominal_circumference, class:"input-default form-control form-control-user overview", id:"abdominal_cicumference", placeholder:"腹囲（半角）cm", maxlength:"3" %>
                              </div>
                          </div>

                          <div class="card card-body m-3 py-3 border-left-info">
                          採血・採尿
                          </div>
                          <div class="form-group ml-4">
                              <div class='input-date-wrap'>
                                <label class="col-sm-12 col-md-2">測定日</label>
                                <%= raw sprintf(
                                              f.date_select(
                                                :blood_urine_test_date,
                                                use_month_numbers: true,
                                                prompt:'--',
                                                start_year: (Time.now.year),
                                                end_year: 2000,
                                                date_separator: '%s'),
                                              "<p class='col-sm-12 col-md-1'> 年 </p>", "<p class='col-sm-12 col-md-1'> 月 </p>",) + "<p class='col-sm-12 col-md-1'> 日 </p>" %>
                              </div>                                
                              <div class="btn btn-light btn-icon-split mt-2 blood-urine-test">  
                                <label class="text">画像を選択
                                    <%= f.file_field :image, id:"item-image", style:"display:none" %>
                                </label>
                              </div>
                          </div>
                          
                          
                            <%= f.submit "登録" ,class:"rbtn btn-primary btn-user btn-block" %>
                            <hr>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>

