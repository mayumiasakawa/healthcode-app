  <div class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>

                            <%= form_with model: @user, url: user_registration_path, class: 'registration-main user', local: true do |f| %>
                              <%= render "devise/shared/error_messages", resource: resource %>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= f.text_field :first_name, class:"input-default form-control form-control-user", id:"exampleFirstName", placeholder:"First Name", maxlength:"40" %>
                                    </div>
                                    <div class="col-sm-6">
                                        <%= f.text_field :last_name, class:"input-default form-control form-control-user", id:"exampleLastName", placeholder:"Last Name", maxlength:"40" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= f.text_field :first_name_kana, class:"input-default form-control form-control-user", id:"exampleFirstNameKana", placeholder:"First Name Kana", maxlength:"40" %>
                                    </div>
                                    <div class="col-sm-6">
                                        <%= f.text_field :last_name_kana, class:"input-default form-control form-control-user", id:"exampleLastNameKana", placeholder:"Last Name Kana", maxlength:"40" %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class='input-birth-wrap'>
                                      <%= raw sprintf(
                                                  f.date_select(
                                                    :birthday,
                                                    class:'select-birth birthday',
                                                    id:"birth-date birthday",
                                                    use_month_numbers: true,
                                                    prompt:'--',
                                                    start_year: 1930,
                                                    end_year: (Time.now.year - 5),
                                                    date_separator: '%s'),
                                                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
                                    </div>

                                    
                                </div>
                                <div class="form-group">
                                    <%= f.email_field :email, class:"input-default form-control form-control-user", id:"exampleInputEmail", placeholder:"Email Address", autofocus: true %>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                      <%= f.password_field :password, class:"input-default form-control form-control-user", id:"password exampleInputPassword", placeholder:"Password" %>
                                    </div>
                                    <div class="col-sm-6">
                                      <%= f.password_field :password_confirmation, class:"input-default form-control form-control-user", id:"password-confirmation exampleRepeatPassword", placeholder:"Repeat Password" %>

                                    </div>
                                </div>
                                <%= f.submit "Register Account" ,class:"rbtn btn-primary btn-user btn-block" %>
                                <hr>
                                <a href="#" class="btn btn-google btn-user btn-block">
                                    Register with Google
                                </a>
                                <a href="#" class="btn btn-facebook btn-user btn-block">
                                    Register with Facebook
                                </a>
                            <% end %>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="#">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="#">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
  </div>

  <%= render "devise/shared/links" %>

