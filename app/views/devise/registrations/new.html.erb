  <div class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>

                            <%= form_with model: @user, url: user_registration_path, class: 'registration-main user', local: true do |f| %>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= f.text_field :first_name, class:"input-default form-control form-control-user", id:"exampleFirstName", placeholder:"First Name", maxlength:"40" %>
                                    </div>
                                    <div class="col-sm-6">
                                        <%= f.text_field :first_name, class:"input-default form-control form-control-user", id:"exampleLastName", placeholder:"Last Name", maxlength:"40" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= f.text_field :text, class:"input-default form-control form-control-user", id:"exampleFirstNameKana", placeholder:"First Name Kana", maxlength:"40" %>
                                    </div>
                                    <div class="col-sm-6">
                                        <%= f.text_field :text, class:"input-default form-control form-control-user", id:"exampleLastNameKana", placeholder:"Last Name Kana", maxlength:"40" %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <%= f.text_field :text, class:"input-default form-control form-control-user", id:"birthday", placeholder:"Birthday" %>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                                        placeholder="Email Address">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= f.text_field :password, class:"input-default form-control form-control-user", id:"exampleInputPassword", placeholder:"Password" %>

                                    </div>
                                    <div class="col-sm-6">
                                        <%= f.text_field :password, class:"input-default form-control form-control-user", id:"exampleRepeatPassword", placeholder:"Repeat Password" %>
                                    </div>
                                </div>
                                <a href="login.html" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </a>
                                <hr>
                                <a href="index.html" class="btn btn-google btn-user btn-block">
                                    Register with Google
                                </a>
                                <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                    Register with Facebook
                                </a>
                            <% end %>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="login.html">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
  </div>